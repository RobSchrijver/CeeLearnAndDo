@model CeeLearnAndDo.Models.Article

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="b">
            Omschrijving
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArticleDescription)
        </dd>

        <dt class="b">
            Naam
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArticleName)
        </dd>

        <dt class="b">
            Foto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArticlePhoto)
        </dd>

        <dt class="b">
            Tekst
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArticleText)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar het overzicht", "Index")
        </div>
    }
</div>
