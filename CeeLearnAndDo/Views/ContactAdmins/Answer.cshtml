@model CeeLearnAndDo.Models.ContactAdmin


@{
    ViewBag.Title = "Edit";
}

<h2>Antwoord</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ContactAdmin</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(Model => Model.Id)


    <p class="control-label col-md-2 b">Omschrijving</p>

    <div class="form-group">
        <h4 class="control-label col-md-2">Antwoord</h4>
        @Html.EditorFor(Model => Model.AnswerDescription, new { @class = "form-control", @placeholder = "Wat heeft u hier op te zeggen?!" })
        <h4 class="control-label col-md-2">Weergeven op de website</h4>
        @Html.EditorFor(Model => Model.SiteDisplay, new { @class = "form-control" })

        @*hidden values*@
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.Type)

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Opslaan" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Terug naar het overzicht", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
