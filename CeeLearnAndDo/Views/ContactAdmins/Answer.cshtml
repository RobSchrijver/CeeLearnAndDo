@model CeeLearnAndDo.Models.AnswerViewModel


@{
    ViewBag.Title = "Edit";
}

<h2>Answer</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ContactAdmin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(Model => Model.contactadmin.Id)

        <p>
            @Html.DisplayFor(model => model.contactadmin.Description, new { htmlAttributes = new { @class = "form-control" } })
        </p>

        <div class="form-group">
            <h4 class="control-label col-md-2">Antwoord</h4>
            @Html.TextAreaFor(Model => Model.answer.AnswerDescription, new { @class = "form-control", @placeholder = "Wat heeft u hier op te zeggen?!" })
            <h4 class="control-label col-md-2">Weergeven op de website</h4>
            @Html.CheckBoxFor(Model => Model.answer.SiteDisplay, new { @class = "form-control" })
            @Html.HiddenFor(model => model.answer.QuestionId, new { Value = Model.contactadmin.Id })

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
